<?xml version="1.0" encoding="utf-8" ?>
<ResourceDictionary xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Todo.ProgramadorCamisa10.Resources.Styles.AppStyles">

    <!--vamos criar um recurso a nivel de pagina-->
    <!--estou definindo todos os botões desta pagina-->
    <!--este stylo só será usado dentro desta pagina-->
    <!--lembrando que o que eu não definir aqui ele pega do (styles-nivel-global)-->
    <Style TargetType="Button">
        <Setter Property="BackgroundColor" Value="Green" />
        <Setter Property="TextColor" Value="White" />
        <Setter Property="WidthRequest" Value="200" />
        <Setter Property="Margin" Value="0,0,0,10" />
        <Setter Property="CornerRadius" Value="10" />
        <Setter Property="FontAttributes" Value="Bold" />
    </Style>

</ResourceDictionary>